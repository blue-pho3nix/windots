// ADD or REMOVE applications below:
{
	"$schema": "https://raw.githubusercontent.com/jacquindev/windots/refs/heads/main/schema.json",
	"environment_variables": [
		// Please modify the `path/value` for your environment names
		{ "command": "eza", "name": "EZA_CONFIG_DIR", "value": "C:\\Users\\jqnhi\\.config\\eza" },
		{ "command": "komorebic", "name": "KOMOREBI_CONFIG_HOME", "value": "C:\\Users\\jqnhi\\.config\\komorebi" },
		{ "command": "yazi", "name": "YAZI_FILE_ONE", "value": "C:\\Program Files\\Git\\usr\\bin\\file.exe" },
		{ "command": "yazi", "name": "YAZI_CONFIG_HOME", "value": "C:\\Users\\jqnhi\\.config\\yazi" },
		{ "command": "vagrant", "name": "VAGRANT_DEFAULT_PROVIDER", "value": "virtualbox" }
	],
	"package_source": {
		"winget": {
			"auto_install": true,
			"packages": [
				{ "id": "AmN.yasb" },
				{ "id": "chrisant996.Clink" },
				{ "id": "gerardog.gsudo" },
				{ "id": "Git.Git" },
				{ "id": "GitHub.GitHubDesktop" },
				{ "id": "Google.Chrome" },
				{ "id": "ImageMagick.ImageMagick" },
				{ "id": "JanDeDobbeleer.OhMyPosh" },
				{ "id": "LGUG2Z.komorebi" },
				{ "id": "LGUG2Z.whkd" },
				{ "id": "Microsoft.PowerShell" },
				{ "id": "Microsoft.PowerToys" },
				{ "id": "Rainmeter.Rainmeter" },
				{ "id": "rocksdanister.LivelyWallpaper" },
				{ "id": "Stardock.Start11" },
				{ "id": "9NRX63209R7B", "source": "msstore" }, // Outlook for Windows
				{ "id": "9NHT9RB2F4HD", "source": "msstore" } // Microsoft Copilot
			],
			"additional_args": [
				"--exact",
				"--silent",
				"--accept-package-agreements",
				"--accept-source-agreements"
			]
		},
		"choco": {
			"auto_install": true,
			"packages": [
				"awscli",
				"choco-cleaner",
				"ngrok"
			],
			"additional_args": [
				"-y"
			]
		},
		"scoop": {
			"auto_install": true,
			"buckets": ["extras", "sysinternals"],
			"packages": [
				"aria2",
				"bat",
				"btop",
				"charm-gum",
				"delta",
				"eza",
				"fastfetch",
				"fd",
				"ffmpeg",
				"fzf",
				"gh",
				"git-aliases",
				"jq",
				"lazygit",
				"poppler",
				"pskill",
				"scoop-completion",
				"scoop-search",
				"secureuxtheme",
				"shfmt",
				"speedtest-cli",
				"spicetify-cli",
				"spotify-tui",
				"starship",
				"wget",
				"wixtoolset",
				"yazi",
				"yq",
				"zoxide"
			],
			"additional_args": []
		}
	},
	"package_plugins": [
		// You can add extra plugins/extensions/addons list here with the following format:
		// Set `"install": true` to install the plugins
		{
			"command_name": "gh",
			"invoke_command": "gh extension install",
			"check_command": "gh extension list",
			"plugins": [
				"dlvhdr/gh-dash",
				"Shresht7/gh-license",
				"yusukebe/gh-markdown-preview"
			],
			"install": false
		}
	],
	"powershell_modules": {
		"install": true,
		"modules": [
			"BurntToast",
			"CompletionPredictor",
			"DockerCompletion",
			"npm-completion",
			"posh-git",
			"powershell-yaml",
			"PSFzf",
			"PSToml",
			"Terminal-Icons"
		],
		"additional_args": [
			"-Scope",
			"CurrentUser",
			"-Force",
			"-AllowClobber"
		]
	}
}
