// PLEASE MODIFY THIS FILE WITH YOUR PREFERRED APPLICATIONS / PACKAGES / TOOLS BEFOR RUNNING `Setup.ps1` script!!
// ADD or REMOVE applications below:
{
	"$schema": "https://raw.githubusercontent.com/jacquindev/windots/refs/heads/main/schema.json",
	"environment_variables": [
		// Please modify the `path/value` for your environment names
		{ "command": "eza", "name": "EZA_CONFIG_DIR", "value": "C:\\Users\\jqnhi\\.config\\eza" },
		{ "command": "komorebic", "name": "KOMOREBI_CONFIG_HOME", "value": "C:\\Users\\jqnhi\\.config\\komorebi" },
		{ "command": "yazi", "name": "YAZI_FILE_ONE", "value": "C:\\Program Files\\Git\\usr\\bin\\file.exe" },
		{ "command": "yazi", "name": "YAZI_CONFIG_HOME", "value": "C:\\Users\\jqnhi\\.config\\yazi" },
		{ "command": "vagrant", "name": "VAGRANT_DEFAULT_PROVIDER", "value": "virtualbox" }
	],
	"package_source": {
		"winget": {
			"auto_install": true,
			"packages": [
				{ "id": "Amazon.AWSCLI" },
				{ "id": "AmN.yasb" },
				{ "id": "chrisant996.Clink" },
				{ "id": "LoftLabs.DevPod" },
				{ "id": "Docker.DockerDesktop" },
				{ "id": "gerardog.gsudo" },
				{ "id": "Git.Git" },
				{ "id": "GitHub.GitHubDesktop" },
				{ "id": "Google.Chrome.Dev" },
				{ "id": "ImageMagick.ImageMagick" },
				{ "id": "JanDeDobbeleer.OhMyPosh" },
				{ "id": "LGUG2Z.komorebi" },
				{ "id": "LGUG2Z.whkd" },
				{ "id": "Microsoft.AzureCLI" },
				{ "id": "Microsoft.DotNet.SDK.8" },
				{ "id": "Microsoft.DotNet.SDK.9" },
				{ "id": "Microsoft.PowerShell" },
				{ "id": "Microsoft.PowerToys" },
				{ "id": "Microsoft.VisualStudio.2022.Community" },
				{ "id": "Microsoft.VisualStudioCode" },
				{ "id": "Obsidian.Obsidian" },
				{ "id": "Postman.Postman" },
				{ "id": "Rainmeter.Rainmeter" },
				{ "id": "rocksdanister.LivelyWallpaper" },
				{ "id": "Stardock.Start11" },
				{ "id": "Symless.Synergy" },
				{ "id": "9NRX63209R7B", "source": "msstore" }, // Outlook for Windows
				{ "id": "9NHT9RB2F4HD", "source": "msstore" } // Microsoft Copilot
			],
			"additional_args": [
				"--exact",
				"--silent",
				"--accept-package-agreements",
				"--accept-source-agreements"
			]
		},
		"choco": {
			"auto_install": true,
			"packages": [
				"ngrok",
				"virtualbox",
				"vagrant",
				"zig"
			],
			"additional_args": [
				"-y"
			]
		},
		"scoop": {
			"auto_install": true,
			"buckets": ["extras", "sysinternals"],
			"packages": [
				"aria2",
				"bat",
				"bfg",
				"btop",
				"charm-gum",
				"delta",
				"eza",
				"fastfetch",
				"fd",
				"fzf",
				"gh",
				"git-aliases",
				"git-crypt",
				"git-lfs",
				"git-sizer",
				"gitleaks",
				"glow",
				"jq",
				"lazygit",
				"pskill",
				"scoop-completion",
				"scoop-search",
				"secureuxtheme",
				"sed",
				"shfmt",
				"speedtest-cli",
				"spicetify-cli",
				"spotify-tui",
				"starship",
				"task",
				"wget",
				"wixtoolset",
				"yazi",
				"yq",
				"zoxide"
			],
			"additional_args": []
		}
	},
	"package_plugins": [
		// You can add extra plugins/extensions/addons list here with the following format:
		// Set `"install": true` to install the plugins
		{
			"command_name": "gh",
			"invoke_command": "gh extension install",
			"check_command": "gh extension list",
			"plugins": [
				"dlvhdr/gh-dash",
				"Shresht7/gh-license",
				"yuler/gh-download",
				"seachicken/gh-poi",
				"Link-/gh-token",
				"yusukebe/gh-markdown-preview"
			],
			"install": false
		},
		{
			"command_name": "dotnet",
			"invoke_command": "dotnet tool install -g",
			"check_command": "dotnet tool list -g",
			"plugins": [
				"dotnet-ef",
				"dotnet-outdated-tool",
				"GitVersion.Tool"
			],
			"install": false
		},
		{
			"command_name": "vagrant",
			"invoke_command": "vagrant plugin install",
			"check_command": "vagrant plugin list",
			"plugins": [
				"vagrant-hostmanager",
				"vagrant-share",
				"vagrant-winnfsd"
			],
			"install": false
		},
		{
			"command_name": "az",
			"invoke_command": "az extension add --name",
			"check_command": "(az extension list | ConvertFrom-Json).name",
			"plugins": [
				"costmanagement"
			],
			"install": false
		},
		{
			"command_name": "bun", // I use bun instead of npm, pnpm, or yarn since it's faster (required `bun` installed)
			"invoke_command": "bun add -g",
			"check_command": "bun pm ls -g",
			"plugins": [
				"@angular/cli",
				"commitizen",
				"cz-git",
				"degit",
				"markdown-link-check",
				"textlint-rule-terminology",
				"textlint",
				"typescript"
			],
			"install": false
		},
		{
			"command_name": "pipx",
			"invoke_command": "pipx install",
			"check_command": "pipx list",
			"plugins": [
				"cookiecutter",
				"copier",
				"pdm",
				"poetry"
			],
			"install": false
		}
	],
	"powershell_modules": {
		"install": true,
		"modules": [
			"BurntToast",
			"CompletionPredictor",
			"DockerCompletion",
			"npm-completion",
			"posh-alias",
			"posh-git",
			"powershell-yaml",
			"PSFzf",
			"PSToml",
			"Terminal-Icons"
		],
		"additional_args": [
			"-Scope",
			"CurrentUser",
			"-Force",
			"-AllowClobber"
		]
	}
}
