{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.30/schema.bar.json",
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 40,
      "right": 0,
      "bottom": 40
    }
  },
  "font_family": "JetBrainsMono Nerd Font",
  "font_size": 15,
  "theme": {
    "palette": "Catppuccin",
    "name": "Macchiato",
    "accent": "Green"
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Cpu": {
        "data_refresh_interval": 10,
        "enable": true,
        "label_prefix": "Icon"
      }
    },
    {
      "Memory": {
        "data_refresh_interval": 10,
        "enable": true,
        "label_prefix": "Icon"
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear",
        "label_prefix": "Icon"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwelveHour",
        "label_prefix": "Icon"
      }
    }
  ]
}
