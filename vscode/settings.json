{
  // editor
  "editor.bracketPairColorization.enabled": true,
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.confirmDragAndDrop": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "'FantasqueSansM Nerd Font', 'JetBrainsMono Nerd Font'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.hideCursorInOverviewRuler": false,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 21,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.scrollBeyondLastLine": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.useTabStops": true,
  // files
  //"files.autoSave": "onFocusChange",
  // "files.exclude": {
  //   "**/__pycache__": true,
  //   "**/.cache": true,
  //   "**/.coverage": true,
  //   "**/.DS_Store": true,
  //   "**/.idea": true,
  //   "**/.mypy_cache": true,
  //   "**/.pytest_cache": true,
  //   "**/.venv": true,
  //   "**/*.py[co]": true,
  //   "**/bower_components": true,
  //   "**/docs/build": true,
  //   "**/htmlcoverage": true,
  //   "**/node_modules": true,
  //   "**/package-lock.json": true
  // },
  // workbench
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": true,
  "workbench.editor.labelFormat": "medium",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.productIconTheme": "material-product-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  // terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.cursorWidth": 1,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.stickyScroll.enabled": false,
  "accessibility.signals.terminalBell": {
    "sound": "off"
  },
  // window
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  "window.titleBarStyle": "custom",
  "window.title": "",
  // catppuccin theme
  "catppuccin.bracketMode": "neovim",
  "catppuccin.extraBordersEnabled": true,
  "catppuccin.workbenchMode": "flat",
  "catppuccin.accentColor": "peach",
  // glassit - transparency
  "glassit.alpha": 255,
  // telemetry
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  // git
  "git.allowForcePush": true,
  "git.autofetch": false,
  "git.autorefresh": true,
  "git.decorations.enabled": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.showInlineOpenFileAction": false,
  // diff
  "diffEditor.renderSideBySide": true,
  // code-runner
  "code-runner.clearPreviousOutput": true,
  "code-runner.enableAppInsights": false,
  "code-runner.ignoreSelection": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.showExecutionMessage": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
